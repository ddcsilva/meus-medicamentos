rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.isAdmin == true;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isMemberOfFamily(familyId) {
      return isAuthenticated() &&
        request.auth.uid in firestore.get(/databases/(default)/documents/families/$(familyId)).data.members;
    }

    // Exemplo: Usuário pode subir avatar na sua própria pasta
    match /users/{userId}/{fileName} {
      // Privacidade: somente o dono (ou admin) pode ler
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId)
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Fotos de medicamentos por família
    // Ex: families/{familyId}/medications/{medicationId}/cover.jpg
    match /families/{familyId}/medications/{medicationId}/{fileName} {
      allow read: if isMemberOfFamily(familyId) || isAdmin();
      allow write: if isMemberOfFamily(familyId)
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Bloqueia tudo por padrão
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função auxiliar para verificar autenticação
    function isAuthenticated() {
      return request.auth != null;
    }

    // Função auxiliar para verificar se é dono do dado (ex: user profile)
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Regra Padrão: Bloqueia tudo que não for explicitamente permitido abaixo
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Exemplo: Coleção de Usuários (Apenas o próprio usuário lê/edita seu doc)
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
  }
}